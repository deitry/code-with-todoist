{
	"name": "code-with-todoist",
	"displayName": "code with Todoist",
	"description": "Todoist plugin for vs code",
	"version": "0.0.1",
	"publisher": "Spoorthi Satheesha",
	"license": "",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"keywords": ["todoist", "productivity"],
	"preview": true,
	"activationEvents": [
		"onView:projects"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "todoist.updateToken",
				"title": "Update Todoist Integration API Token"
			},
			{
				"command": "todoist.sync",
				"title": "Sync Todoist",
				"icon":{
					"light": "media/light_refresh.svg",
					"dark": "media/dark_refresh.svg"
				}
			},
			{
				"command": "todoist.closeTask",
				"title": "Mark task as done",
				"icon": {
					"light": "media/light_check.svg",
					"dark": "media/dark_check.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "todoist.closeTask",
					"when": "view == task",
					"group": "navigation"
				},
				{
					"command": "todoist.sync",
					"when": "view == projects",
					"group": "navigation"
				}
			]
		},
		"views": {
			"code-with-todoist": [
				{
					"id": "projects",
					"name": "Projects"
				},
				{
					"id": "task",
					"name": "Task"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "code-with-todoist",
					"title": "Code with Todoist",
					"icon": "media/icon.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "projects",
				"contents": "No projects were loaded \n//TODO: Edit this text \n[Update API Token](command:todoist.updateToken)"
			},
			{
				"view": "task",
				"contents": "No task was selected \n//TODO: Edit this text"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"axios": "^0.19.2"
	}
}
